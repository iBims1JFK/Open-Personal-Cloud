# SnapRAID configuration file
# Generated by Ansible

# Parity file
parity {{ storage_parity_mount }}/snapraid.parity

# Content files
content /var/snapraid.content
{% for item in storage_disks %}
content /mnt/disk{{ loop.index0 }}/snapraid.content
{% endfor %}

# Data disks
{% for item in storage_disks %}
disk d{{ loop.index0 }} /mnt/disk{{ loop.index0 }}
{% endfor %}

# Excludes
exclude *.unrecoverable
exclude /tmp/
exclude /lost+found/
exclude .AppleDouble
exclude ._AppleDouble
exclude .DS_Store
exclude .Thumbs.db
exclude .fseventsd
exclude .Spotlight-V100
exclude .Trashes
exclude /snapraid.content
